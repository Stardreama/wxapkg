/* pages/index/index.wxss */
.info-row {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.message {
  padding: 20rpx;
  background: #e3f2fd;
  border-radius: 8rpx;
  margin: 20rpx 0;
}

.list {
  margin-top: 20rpx;
}

.list-item {
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.list-item:last-child {
  border-bottom: none;
}

.actions {
  margin-top: 40rpx;
}

.actions button {
  margin-bottom: 20rpx;
}

.btn-secondary {
  background: #f5f5f5;
  color: #333;
  border: none;
  border-radius: 50rpx;
}
