page {
  background-color:#f5f5f5;
  font-family:-apple-system,BlinkMacSystemFont,Segoe UI,sans-serif
}
.container {
  box-sizing:border-box;
  padding:30rpx
}
.card {
  background:#fff;
  border-radius:16rpx;
  box-shadow:0 2rpx 10rpx rgba(0,0,0,.05);
  padding:30rpx
}
.card,.title {
  margin-bottom:20rpx
}
.title {
  color:#333;
  font-size:36rpx;
  font-weight:700
}
.subtitle {
  color:#666;
  font-size:28rpx
}
.btn-primary {
  background:linear-gradient(135deg,#1976d2,#42a5f5);
  border:none;
  border-radius:50rpx;
  color:#fff;
  font-size:28rpx;
  padding:20rpx 40rpx
}